<style>html{overflow:hidden;height: 100vh;width: 100vw;}</style>
<div class="no-header new-leaf-gradient">
  <div class="back-home">
    <i class="fa fa-long-arrow-left fa-lg" aria-hidden="true"></i>
    <%= link_to 'Back Home', '/', class: 'back-home' %>
  </div>
<div class="sign-up">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label 'LOGIN' %>
    <%= f.text_field :username, :placeholder => "Username" %>
    <%= f.password_field :password, :placeholder => "Password" %>
    <%= f.submit "Log in", class: "btn-submit" %>
  <% end %>
  <% if session[:user_id] %>
  <p> Signed in </p>
  <% end %>
</div>
</div>
