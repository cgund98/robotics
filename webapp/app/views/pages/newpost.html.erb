<div class="signup">
    <%= form_for(@message) do |f| %>  
      <div class="field"> 
        <%= f.label :message %><br>
        <%= f.text_area :category %>
        <%= f.text_area :title %>
        <%= f.text_area :content %> 
      </div> 
      <div class="actions"> 
        <%= f.submit "Create" %> 
      </div> 
    <% end %>
</div>