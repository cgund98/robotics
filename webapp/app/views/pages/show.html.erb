<div class="header-background"></div>
<div class="post grid">
  <div class="grid__item--sm-span-8 post-img">
    <%= render 'layouts/post_image' %>
    <h2><%= @post.title %></h2>
  </div>
  <div class="grid__item--sm-span-6 post-text">
    <p class="body-font">
      <%= @post.content %>
    </p>
  </div>
  <div class="grid__item--sm-span-2 recent-posts">
    <div class="lines">
      <h2 class="lines-text">Recent Posts</h2>
    </div>
    <% @recent_posts.each do |post| %>
    <%= link_to "/post/#{post.title}" do %>
    <div>
      <%= render 'layouts/post_image' %>
      <h3><%= post.title %></h3>
    </div>
    <% end %>
    <% end %>
  </div>
</div>
